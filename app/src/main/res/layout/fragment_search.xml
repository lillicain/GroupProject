<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.groupproject.search.SearchViewModel"/>
        <variable
            name="Suggestion"
            type="com.example.groupproject.search.Suggestion"/>
    </data>


    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#87bba2"
        tools:context="com.example.groupproject.search.SearchFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Find a word"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="#3B6064"
                android:textColorHint="#55828b"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/searchButtonFragment"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/searchButtonFragment"
                android:paddingVertical="10dp"/>

            <Button
                android:id="@+id/searchButtonFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textColor="#c9e4ca"
                android:backgroundTint="#55828B"
                app:layout_constraintTop_toBottomOf="@id/searchEditText"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/searchButtonFragment"
                app:layout_constraintBottom_toBottomOf="parent"
                listData="">

            </androidx.recyclerview.widget.RecyclerView>




        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
