<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="property"
            type="com.example.groupproject.ringtone.RingtoneProperty"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/ringtone_name"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:paddingStart="9dp"
            android:paddingEnd="9dp"
            android:text="@{property.name}"
            android:textSize="20sp"
            tools:text="Name" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"/>

        <TextView
            android:id="@+id/ringtone_year_text"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/ringtone_name"
            android:layout_toStartOf="@+id/ringtoneButton"
            android:text="@{property.year}"
            android:textSize="20sp"
            tools:text="Year" />

        <Button
            android:id="@+id/ringtoneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:text="@string/play"
            android:textColor="@color/charcoal"
            android:backgroundTint="@color/blue_munsell"
            tools:text="Play"/>
    </RelativeLayout>
</layout>